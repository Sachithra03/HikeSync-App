<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hikesyncapp">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HikeSyncApp">

        <!-- ✅ Splash screen / App launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ✅ Login screen -->
        <activity android:name=".LoginActivity" />

        <!-- ✅ Onboarding screens -->
        <activity android:name=".OnboardScreen1Activity" />
        <activity android:name=".OnboardScreen2Activity" />
        <activity android:name=".OnboardScreen3Activity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".DescriptionActivity" />
        <activity android:name=".FavoritesActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".CommunityActivity" />

    </application>

</manifest>